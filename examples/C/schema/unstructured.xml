<?xml version="1.0"?>
<adios-config host-language="C" schema-version="1.1">
    <adios-group name="field3d" coordination-communicator="comm">
    <var name="timestep" gwrite="sml_istep" type="integer"/>
    <var name="nnodes" type="integer"/>
    <var name="nphi" type="integer"/>
    <var name="iphi" type="integer"/>
    <var name="nspace" type="integer"/>

    <global-bounds dimensions="nphi,nnodes" offsets="iphi,0">
    <var name="dpot" type="real*8" dimensions="1,nnodes" mesh="xgc.mesh" hyperslab=": 0,: 1,: nphi"/>
    </global-bounds>
    <global-bounds dimensions="nphi,nnodes" offsets="iphi,0">
    <var name="iden" type="real*8" dimensions="1,nnodes" mesh="xgc.mesh" hyperslab=": 0,: 1,: nphi"/>
    </global-bounds>
    <global-bounds dimensions="nphi,nnodes" offsets="iphi,0">
    <var name="eden" type="real*8" dimensions="1,nnodes" mesh="xgc.mesh" hyperslab=": 0,: 1,: nphi"/>
    </global-bounds>
    <global-bounds dimensions="nphi,nnodes" offsets="iphi,0">
    <var name="ddpotdt" type="real*8" dimensions="1,nnodes" mesh="xgc.mesh" hyperslab=": 0,: 1,: nphi"/>
    </global-bounds>
    <var name="pot0" type="real*8" dimensions="nnodes" />
    <var name="n_n" type="integer"/>
    <var name="n_t" type="integer"/>
    <var name="values" gwrite="coord" path="/coordinates" type="real*8" dimensions="nspace,nnodes"/>
    <var name="node_connect_list" gwrite="nodeid" path="/cell_set[0]" type="integer" dimensions="3"/>

    <var name="n_psi" type="integer"/>
    <var name="itheta0" gwrite="n_itheta0" type="integer" dimensions="n_psi"/>
    <var name="nextnode" gwrite="nextn" type="integer" dimensions="nnodes"/>
    <var name="psi" gwrite="grid%psi" type="real*8" dimensions="nnodes"/>
    <var name="node_vol" gwrite="grid%node_vol" type="real*8" dimensions="nnodes"/>
    <var name="node_vol_ff0" type="real*8" dimensions="nnodes"/>
    <var name="node_vol_ff1" type="real*8" dimensions="nnodes"/>

    <mesh name="xgc.mesh" type="unstructured" file="xgc.mesh.bp" group="xgc-mesh-group" time-varying="no" time-steps="timestep" time-series-format="xxxx">
    <nspace value="nspace"/> 
    <points-single-var value="values" />
    <uniform-cells count="ncells" data="node_connect_list" type="triangle" />
    </mesh>

    </adios-group>

    <method group="field3d" method="MPI"/>
    <buffer size-MB="5" allocate-time="now"/>
    </adios-config>
