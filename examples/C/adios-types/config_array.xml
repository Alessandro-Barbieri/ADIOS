<?xml version="1.0"?>
<adios-config host-language="C">
    <adios-group name="my_group" coordination-communicator="comm">
    <var name="NX" type="integer"/>
    <var name="NY" type="integer"/>
    <var name="var_double_array" type="double" dimensions="NX,NY"/>
    <var name="var_int_array" type="integer" dimensions="NX"/>
</adios-group>

<method group="my_group" method="MPI"/>

<buffer size-MB="20" allocate-time="now"/>

</adios-config>

