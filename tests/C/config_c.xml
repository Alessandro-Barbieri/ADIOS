<adios-config host-language="C">   <!-- other host-language is 'Fortran' -->
  <adios-group name="restart" coordination-communicator="comm">
    <var name="comm" type="integer"/>

    <var name="mype" type="integer"/>
    <var name="mype" path="/test" type="integer"/>
    <var name="zionsize" type="integer"/>
    <var name="zion" type="real" dimensions="10" path="/abc/me"/>
    <var name="zion1" type="real" dimensions="zionsize" path="/abc/me"/>

    <var name="node-attr" type="integer"/>

    <attribute name="units1" path="/abc/me/" value="m/s"/>
    <attribute name="units2" path="/abc/me" value="m/s"/>
    <attribute name="timestep1" path="/" value="1"/>
    <attribute name="timestep2" path="/abc" value="1"/>
    <attribute name="timestep3" path="/abc/" value="1"/>

    <!-- try a writeable attribute -->
    <attribute name="node" path="/" var="node-attr"/>
  </adios-group>

  <method group="restart" method="POSIX"/>

  <buffer size-MB="100" allocate-time="now"/>

</adios-config>
