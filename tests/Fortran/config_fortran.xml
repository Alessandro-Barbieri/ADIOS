<?xml version="1.0"?>
<adios-config host-language="Fortran">
  <adios-group name="restart" communicator-group="group_comm">
    <var name="group_comm" type="integer*8" write="no"/>

    <var name="mype" type="integer"/>
    <var name="nhybrid" type="integer"/>
    <var name="istep" type="integer"/>
    <var name="me" path="/abc" type="integer"/>
    <var name="mi" type="integer"/>
    <var name="ntracer" type="integer"/>
    <var name="mflux" type="integer"/>

    <var name="etracer" type="real"/>
    <var name="ptracer" type="real" dimensions="4"/>

    <var name="mpsi" type="integer"/>
    <var name="rdtemi" type="real" dimensions="mpsi"/>
    <var name="rdteme" type="real" dimensions="mflux"/>
    <var name="pfluxpsi" type="real" dimensions="mpsi"/>
    <var name="phisize" type="integer"/>
    <var name="phi" type="real" dimensions="phisize"/>
    <var name="phip00" type="real" dimensions="mpsi"/>
    <var name="zonali" type="real" dimensions="mpsi"/>
    <var name="zonale" type="real" dimensions="mpsi"/>
    <var name="zionsize" type="integer"/>
    <var name="zion" type="real" dimensions="zionsize"/>
    <var name="zion0" type="real" dimensions="mi"/>

    <var name="phisavesize" type="integer"/>
    <var name="phisave" type="real" dimensions="phisavesize"/>

    <var name="zelectronsize" type="integer"/>
    <var name="zelectron" type="real" dimensions="zelectronsize"/>

    <var name="ze0size" type="integer"/>
    <var name="zelectron0" type="real" dimensions="ze0size"/>

    <var name="nparam" type="integer" write="no"/>
    <var name="mimax" type="integer" write="no"/>
    <var name="mgrid" type="integer" write="no"/>
    <var name="mzeta" type="integer" write="no"/>
    <var name="memax" type="integer" write="no"/>

    <attribute name="units" path="/abc/me/" value="m/s"/>
    <attribute name="units1" path="/abc/me" value="m/s"/>
    <attribute name="timestep1" path="/" var="istep1" type="integer"/>
    <attribute name="timestep2" path="/abc" var="istep2" type="integer"/>
    <attribute name="timestep3" path="/abc/" var="istep3" type="integer"/>
  </adios-group>

  <adios-group name="diagnostic">
    <var name="a" type="integer"/>
  </adios-group>

  <method priority="2" method="MPI" iterations="10" group="restart"/>
  <method priority="1" method="MPI" iterations="10" group="diagnostic">path="asd",downstream="ewok001.nccs.ornl.gov",port="9999"</method>

  <buffer size-MB="50" allocate-time="now"/>

</adios-config>
