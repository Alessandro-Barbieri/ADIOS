<?xml version="1.0"?>
<adios-config host-language="Fortran">
  <adios-group name="restart" coordination-communicator="group_comm">
    <var name="nx" type="integer"/>
    <var name="ny" type="integer"/>
    <var name="nz" type="integer"/>

    <var name="time"      type="double"/>
    <var name="tstep"     type="double"/>
    <var name="time_save" type="double"/>
    <var name="pout"      type="double"/>

    <var name="yspecies_H2"  type="double" dimensions="nx,ny,nz"/>
    <var name="yspecies_O2"  type="double" dimensions="nx,ny,nz"/>
    <var name="yspecies_O"   type="double" dimensions="nx,ny,nz"/>
    <var name="yspecies_OH"  type="double" dimensions="nx,ny,nz"/>
    <var name="yspecies_H2O" type="double" dimensions="nx,ny,nz"/>
    <var name="yspecies_H"   type="double" dimensions="nx,ny,nz"/>
    <var name="yspecies_HO2" type="double" dimensions="nx,ny,nz"/>
    <var name="yspecies_CO"  type="double" dimensions="nx,ny,nz"/>
    <var name="yspecies_CO2" type="double" dimensions="nx,ny,nz"/>
    <var name="yspecies_HCO" type="double" dimensions="nx,ny,nz"/>
    <var name="yspecies_N2"  type="double" dimensions="nx,ny,nz"/>

    <var name="temp"     type="double" dimensions="nx,ny,nz"/>
    <var name="pressure" type="double" dimensions="nx,ny,nz"/>

    <var name="velocity_u" type="double" dimensions="nx,ny,nz"/>
    <var name="velocity_v" type="double" dimensions="nx,ny,nz"/>
    <var name="velocity_w" type="double" dimensions="nx,ny,nz"/>

  </adios-group>

  <method method="MPI" group="restart"/>

  <buffer size-MB="16" allocate-time="now"/>

</adios-config>
