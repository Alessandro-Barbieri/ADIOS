BUILD_IO_METHODS = -D_BUILD_HDF5_F -D_BUILD_ADIOS_F

PNETCDF_DIR = ${HOME}/PnetCDF/ewok
PNETCDF_LIB = -L${PNETCDF_DIR}/lib -lpnetcdf
PNETCDF_LIB =

ADIOS_LIB   = -L/ccs/home/ge1/work/ewok/lib -ladios -lmxml
ADIOS_LIB   = -L${HOME}/ADIOS/svn-ewok/ADIOS/lib -ladios -lmxml
IO_LIB      = $(HDF5_FLIB) $(PNETCDF_LIB) $(ADIOS_LIB)
