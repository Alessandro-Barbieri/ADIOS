# optimized runs

directives = -DCPQ -DSAVEFILEINSEPDIR -DSYSTEMCALLWONTWORK

OPTS = -g
OPTS = -fast

COMPILE_F90  = mpif90 -byteswapio ${OPTS} -r8 -c -Mpreprocess $(directives) -o $@ 
COMPILE_F77  = mpif90 -byteswapio ${OPTS} -r8 -c -Mpreprocess -o $@
COMPILE_C  = mpicc ${OPTS} -c -Mpreprocess -o $@

LINK         = mpif90 -byteswapio ${OPTS} -r8

# run "module load hdf5/1.6.5_par_pgi625" on ewok to load HDF5
