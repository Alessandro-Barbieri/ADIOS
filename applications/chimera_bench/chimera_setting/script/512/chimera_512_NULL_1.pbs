#!/bin/sh
#PBS -A CSC025ewk
#PBS -N chimera_512_NULL_1
#PBS -o /tmp/work/zf2/chimera_run/512/NULL/1/Execute/build/run.stdout
#PBS -e /tmp/work/zf2/chimera_run/512/NULL/1/Execute/build/run.stderr
#PBS -l walltime=01:00:00,size=512

cd /tmp/work/zf2/chimera_run/512/NULL/1/Execute/build

# copy initial parameter files
cp -rf /ccs/home/zf2/chimera_setting/512/Initial_Data/* ./Data3/Initial_Data
sed -i.bak -e "s/dddd/512\/NULL\/1/" ./Data3/Initial_Data/array_dimensions.d

# copy config.xml file
cp -rf /ccs/home/zf2/chimera_setting/configfile/NULL ./config.xml

# write log file
echo "Test Chimera on Machine ""$(hostname)" > ./log
date >> ./log
echo "nproc=""512" >> ./log
echo "method=""NULL" >> ./log
echo "testno=""1" >> ./log
echo >> ./log
echo "Initial Parameter" >> ./log
grep "^n" Data3/Initial_Data/array_dimensions.d >> ./log
grep "ncymax$" Data3/Initial_Data/radhyd_keys.d >> ./log
grep "intprm$" Data3/Initial_Data/edit_keys.d >> ./log
echo >> ./log

echo "Run Chimera begin" >> ./log
date >> ./log

# run the simulation
aprun -n 512 ./RadHyd3D >runlog 2>&1

echo "Run Chimera end" >> ./log
date >> ./log
echo >> ./log

# collect timing info
echo "Restart files" >> ./log
ls -l Data3/Restart/ >> ./log
echo >> ./log
mkdir -p /tmp/work/zf2/chimera_results/512/NULL/1
cp ./log /tmp/work/zf2/chimera_results/512/NULL/1/log
cp ./runlog /tmp/work/zf2/chimera_results/512/NULL/1/runlog
if [ -f run.stdout ]
then
  cp -rf run.stdout /tmp/work/zf2/chimera_results/512/NULL/1
fi
if [ -f run.stderr ]
then
  cp -rf run.stderr /tmp/work/zf2/chimera_results/512/NULL/1
fi

# cleanup
sh Data3/cleanup

