<?xml version="1.0"?>
<adios-config host-language="Fortran">

<adios-group name="output3d.0" coordination-communicator="comm" coordination-var="mype"> 
  <var name="toroidal_comm" type="integer*8" write="no"/> <!-- parallel parameter-->
  <var name="mpsi+1" type="integer" write="no" copy-on-write="yes"/>
  <var name="mzeta+kp" type="integer" write="no" copy-on-write="yes"/>
  <var name="myrank_toroidal" type="integer" write="yes"/>
  <var name="mzeta" type="integer" write="yes"/>
  <var name="kp" type="integer" write="yes"/>
  <var name="mgrid" type="integer" write="yes"/>
  <var name="nproc_toroidal" type="integer" write="yes"/>
  <var name="mpsi" type="integer"/>
  <var name="numberpe" type="integer"/>
  <var name="mtheta" type="integer" dimensions="mpsi+1" copy-on-write="yes"/>
  <var name="itran" type="integer" dimensions="mpsi+1"/>
  <var name="radial" type="real" dimensions="mpsi+1"/>
  <var name="theta_start" type="integer" dimensions="mzeta+kp,mpsi+1"/>
  <var name="X" type="real" dimensions="mzeta+kp,mgrid" copy-on-write="yes"/>
  <var name="Y" type="real" dimensions="mzeta+kp,mgrid" copy-on-write="yes"/>
  <var name="Z" type="real" dimensions="mzeta+kp,mgrid" copy-on-write="yes"/>
</adios-group>

<adios-group name="output3d.1" coordination-communicator="comm" coordination-var="mype">
  <var name="toroidal_comm" type="integer*8" write="no"/> <!-- parallel parameter-->
  <var name="myrank_toroidal" type="integer" write="yes"/>
  <var name="nproc_toroidal" type="integer" write="yes"/>
  <var name="mpsi+1" type="integer" write="no" copy-on-write="yes"/>
  <var name="mzeta+kp" type="integer" write="no" copy-on-write="yes"/>
  <var name="mzeta" type="integer" write="yes"/>
  <var name="kp" type="integer" write="yes"/>
  <var name="mpsi" type="integer"/>
  <var name="mtheta" type="integer" dimensions="mpsi+1" copy-on-write="yes"/>
  <var name="mgrid" type="integer" write="yes"/>
  <var name="phi" type="real" dimensions="mzeta+kp,mgrid"/>
</adios-group>

<method method="MPI" group="output3d.0"/>
<method method="MPI" group="output3d.1"/>

<buffer size-MB="100" allocate-time="now"/>
<!-- or free-memory-percentage="90" allocate-time="oncall" -->
</adios-config>
