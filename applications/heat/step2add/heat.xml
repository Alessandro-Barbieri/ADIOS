<?xml version="1.0"?>
<adios-config host-language="C">
  
  <adios-group name="output">
    <var name="NX" type="integer"/>
    <var name="NY" type="integer"/>
    <var name="data" gname="u" path="/" type="real" dimensions="NX,NY"/>
    <var name="cos_data" gname="cos_u" path="/" type="real" dimensions="NX,NY"/>
    <var name="sin_data" gname="sin_u" path="/" type="real" dimensions="NX,NY"/>
    <var name="tan_data" gname="tan_u" path="/" type="real" dimensions="NX,NY"/>
  </adios-group>

  <method method="POSIX" group="output"/>
  <buffer size-MB="100" allocate-time="now"/>

</adios-config>
